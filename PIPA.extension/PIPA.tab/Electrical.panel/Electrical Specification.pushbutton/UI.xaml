<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="Legend Dimensions" Height="300" Width="300"
       WindowStartupLocation="CenterScreen"
       HorizontalContentAlignment="Center">
        
       <Grid>
        <StackPanel Margin="10">
            <TextBlock TextWrapping="Wrap" Text="Row Height" Width="100" HorizontalAlignment="Left" Margin="0"/>
            <TextBox x:Name="RowHeight" Height="23" TextWrapping="Wrap" Text="1750"/>
            
            <TextBlock TextWrapping="Wrap" Text="Table Width" Width="100" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            <TextBox x:Name="DescriptionWidth" Height="23" TextWrapping="Wrap" Text="8000"/>

            <TextBlock TextWrapping="Wrap" Text="Column Width" Width="100" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            <TextBox x:Name="ColumnWidth" Height="23" TextWrapping="Wrap" Text="2000"/>

            <TextBlock TextWrapping="Wrap" Text="Title Height" Width="100" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            <TextBox x:Name="TitleHeight" Height="23" TextWrapping="Wrap" Text="500"/>
            <Button Content="Set Dimensions" Margin="20,20,20,10" Click="Execute"/>

        </StackPanel>
    </Grid>
    
</Window> 